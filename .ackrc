# == blank lines freak out ack on Windows? ==
#
--type-add=ruby=.haml,.rake
--type-add=html=.erb,.haml,.tmpl
--type-add=js=.coffee,.js.erb
--type-set=coffee=.coffee
--type-add=css=.scss,.sass,.less
--type-set=less=.less
--type-set=sass=.scss,sass
--type-set=cucumber=.feature
--type-set=markdown=.markdown,.md
#
--ignore-dir=vendor
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=doc
--ignore-dir=coverage
--ignore-dir=fixtures
--ignore-dir=script
--ignore-dir=system
#
--sort-files
--color
--follow
--group

--pager=more -RFX
