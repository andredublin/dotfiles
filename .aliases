# FS
alias mountkiz='mount -t smbfs //andre.dublin@kizcrews035/Users /Volumes/share/KIZ'

# Shortcuts
alias g='git'
alias gk='gitk --all 2> /dev/null &'
alias ex='exit'
alias cl='clear'
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias zshrc='vim ~/.zshrc' # Quick access to the ~/.zshrc file

alias grep='grep --color'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS} '

alias t='tail -f'

# Command line head / tail shortcuts
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g L="| less"
alias -g M="| most"
alias -g LL="2>&1 | less"
alias -g CA="2>&1 | cat -A"
alias -g NE="2> /dev/null"
alias -g NUL="> /dev/null 2>&1"
alias -g P="2>&1| pygmentize -l pytb"

alias dud='du --max-depth=1 -h'
alias duf='du -sh *'
alias fd='sudo find . -type d -name'
alias ff='sudo find . -type f -type l -name'

alias h='history'
alias hgrep="fc -El 0 | grep"
alias help='man'
alias j='jobs'
alias p='ps -f'
alias sortnr='sort -n -r'
alias unexport='unset'

# Listing stuff
alias ls='ls -G' #colorized output
alias l='ls -lFh'     #size,show type,human readable
alias la='ls -lAFh'   #long list,show almost all,show type,human readable
alias lr='ls -tRFh'   #sorted by date,recursive,show type,human readable
alias lt='ls -ltFh'   #long list,sorted by date,show type,human readable
alias ldot='ls -ld .*'
alias lS='ls -1FSsh'
alias lart='ls -1Fcart'
alias lrt='ls -1Fcrt'
alias glx='ls -lAFh | grep'  #long list, show almost all, show type, human readabl pipe regex search'

# tmux usage
alias tn='tmux new -s'
alias ta='tmux attach -t'
alias tk='tmux kill-session -t'
alias tls='tmux ls'

# Enhance WHOIS lookups
alias whois='whois -h whois-servers.net'

# IP Stuff
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias myip='ifconfig | grep "inet " | grep -v 127.0.0.1 | cut -d\   -f2'

# Flush Directory Service cache
alias flush='dscacheutil -flushcache;sudo killall -HUP mDNSResponder'
